choice = input("")
if choice != "yes":
    breakpoint


while True:
    print('Welcome to Shoefityou!')
    name = input('What is your name? ')
    print('Hello, ' + name.capitalize() + '!')

    gender_identity = input("""May you help us with identifying yourself?
1. Man
2. Kid
3. Women
Please enter your choice: """)

    if gender_identity == '1':
        print("Perfect! Let's get started, to match you with your Men's shoe size!")
        height_individual = float(input("How tall are you? "))
        print("Alright, you are", height_individual, "feet tall.")
        if height_individual <= 5.5:
            print("Seems like your shoe size is around 7 to 9, in men")
        elif height_individual <= 5.9:
            print("Your shoe size is around 9.5 to 10.5 in men")
        elif height_individual <= 6.2:
            print("Your shoe size is 11 to 12.5 in men")
        else:
            print("Your shoe size is 13 to 20+ in men")

    elif gender_identity == '2':
        print("Perfect, Let's get started, to match you with your kids' shoe size!")
        height_individual2 = float(input("How tall are you? "))
        print("Alright, you are", height_individual2, "feet tall.")
        if height_individual2 <= 3:
            print("Seems like your shoe size is around 1 to 8, in kids")
        elif height_individual2 <= 4:
            print("Your shoe size is around 9 to 13 in kids")
        else:
            print("Your shoe size is 11 to 12.5 in kids")

    elif gender_identity == '3':
        print("Perfect, Let's get started, to match you with your women's shoe size!")
        height_individual3 = float(input("How tall are you? "))
        print("Alright, you are", height_individual3, "feet tall.")
        if height_individual3 <= 5:
            print("Seems like your shoe size is around 4 to 7, in women")
        elif height_individual3 <= 6:
            print("Your shoe size is around 6 to 9 in women")
        else:
            print("Your shoe size is 8 to 12 in women")

    else:
        print("Invalid choice!")

    choice = input("Would you like to play again? (yes/no): ")
    if choice.lower() != "yes":
        break  # Exit the loop if the player doesn't want to play again

print("Thank you for playing Shoefityou!")
